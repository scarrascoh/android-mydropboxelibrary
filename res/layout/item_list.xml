<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/item_list"
   android:orientation="vertical"
	 style="@style/DefaultItem" >
	 
	   <ImageView
	     android:id="@+id/itl_book_image"
	     android:layout_width="30dp"
	     android:layout_height="30dp"
	     android:layout_marginTop="10dp"
	     android:contentDescription="@string/no_image"
	     android:src="@drawable/ic_book" />
	   
	   <TextView
	     android:id="@+id/itl_book_title"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignTop="@id/itl_book_image"
	     android:layout_alignBottom="@id/itl_book_image"
	     android:layout_toRightOf="@id/itl_book_image"
	     android:text="@string/sample_text" />
	</RelativeLayout>
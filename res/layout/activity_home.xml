<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/DefaultActivity"
    tools:context=".HomeActivity" >

    <Button
        android:id="@+id/home_btn_login"
        style="@style/DefaultButton"
        android:text="@string/home_login_btn"
        android:onClick="onClickLoginBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        />
    
    <TextView 
        android:id="@+id/home_sign_in"
        style="@style/DefaultItem"
        android:background="@color/transparent"
        android:layout_below="@id/home_btn_login"
        android:text="@string/home_sign_in"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/blue"
        />

</RelativeLayout>
